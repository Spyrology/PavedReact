  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-js": "browserify src/main.js -t babelify --outfile public/js/bundle.js",
    "build-css": "node-sass --output-style compressed styles/main.scss public/css/main.css",
